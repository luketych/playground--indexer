# Playground Organizer Environment Variables
# Copy this file to .env and customize the values as needed

# Web Server Configuration
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=8000
WEB_SERVER_DEBUG_HOST=127.0.0.1
WEB_SERVER_DEBUG_PORT=8000
WEB_SERVER_RELOAD=true
WEB_SERVER_LOG_LEVEL=info
WEB_SERVER_DEBUG_LOG_LEVEL=debug

# Playground Organizer Configuration
PLAYGROUND_CONFIG_FILE=.playground-config.json
FSWATCH_PATH=/opt/homebrew/bin/fswatch

# Time-based organization thresholds (in days)
CURRENT_THRESHOLD=30
RECENT_THRESHOLD=180
OLD_THRESHOLD=365

# Default directories to exclude (comma-separated)
EXCLUDE_DIRS=.git,node_modules,.DS_Store,__pycache__,.env,venv,.venv

# Application Settings
APP_TITLE=Playground Organizer
APP_DESCRIPTION=Web UI for file organization